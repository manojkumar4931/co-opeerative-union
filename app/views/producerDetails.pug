html
  head
    title #{producer.producer_name} - Producer Details
    style.
      body {
        font-family: Arial, sans-serif;
        background-image: url('/images/background.jpg');
        background-attachment: fixed;
        background-size: 100% auto ;
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 600px;
        margin: 25px auto;
        background: white;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
      }
      h1 {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
      }
      p {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
      }
      a {
        display: inline-block;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
      }
  body
    .container
      h1 #{producer.producer_name}
      p
        strong Details:
        br
        | #{producer.details}

      h3(style="margin-top: 30px; font-size: 24px; font-weight: bold;") Products from this Producer:

      .products-grid(style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 30px; width: 100%;")
        each product in products
          .product-card(style="border: 1px solid #ddd; padding: 15px; text-align: center; border-radius: 12px; background: rgba(255, 255, 255, 0.8); transition: transform 0.3s ease, box-shadow 0.3s ease;")
            img(src=`/${product.image}`, alt=product.name, style="max-width: 150px; max-height: 150px; border-radius: 8px;")
            h3(style="font-size: 20px; margin: 10px 0; text-align: center;")= product.name
            p(style="font-size: 16px; color: #555; text-align: center;") Produced by: #{product.producer}
            a(href='/product-single/' + product.id, style="display: inline-block; margin-top: 15px; padding: 10px 20px; background-color: #28a745; color: white; text-decoration: none; border-radius: 6px; font-weight: bold;") View Details

      a(href="/" style="display: block; margin-top: 30px; text-align: center; color: #007bff; text-decoration: none; font-weight: bold;") Back to Products




